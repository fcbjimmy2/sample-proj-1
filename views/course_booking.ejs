                    time_row += '<td class="text-md-center">' + new Date(return_data[i].StartTime).toLocaleTimeString('en-CA', {
                        timeZone: 'GMT',
                        hour: '2-digit',
                        minute: '2-digit'
                    }) + '</td>';
                    time_row += '<td class="text-md-center">' + new Date(return_data[i].EndTime).toLocaleTimeString('en-CA', {
                        timeZone: 'GMT',
                        hour: '2-digit',
