                                    <div class="col-md-1 py-3">
                                        <label for="no_of_class" class="form-label"><%= __("Class#") %></label>
                                        <input type="text" class="form-control" id="no_of_class" autocomplete="off"
                                               onchange="validate_noofclass()" onkeyup="intCheck('no_of_class')"
